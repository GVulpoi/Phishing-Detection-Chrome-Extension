{
	"manifest_version": 3,
	"name": "Phishing Detector",
	"description": "Detects phishing activities in websites.",
	"version": "1.0",
	"permissions": ["scripting", "activeTab", "storage", "alarms", "declarativeNetRequest", "management"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "./Popup/popup.html",
		"default_icon": "./Resources/icon-32.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["Scripts/RetrieveScripts.js"],
			"run_at": "document_start"
		}
	],
	"background": {
		"service_worker": "./Scripts/ServiceWorker.js"
	},
	"declarative_net_request":
	{
		"rule_resources":
		[
			{
				"id": "block-scripts",
				"enabled": true,
				"path": "rules.json"
			}
		]
	}
}
