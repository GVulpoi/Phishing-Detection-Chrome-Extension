{
	"manifest_version": 3,
	"name": "Phishing Detector",
	"description": "Detects phishing activities in websites.",
	"version": "1.0",
	"permissions": ["scripting", "activeTab", "storage", "alarms", "declarativeNetRequest", "management", "tabs"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "./Popup/popup.html",
		"default_icon": "./Resources/icon-32.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["Scripts/ExtractFeatures.js", "Scripts/Model.js"],
			"run_at": "document_idle"
		}
	],
	"background": {
		"service_worker": "Scripts/ServiceWorker.js",
		"type": "module"
	},
	"web_accessible_resources": [
	{
		"resources": ["Resources/lib/tf.min.js"],
		"matches": ["<all_urls>"]
	}
]
}
